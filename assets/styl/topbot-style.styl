body
  font-family: $font-family
  font-size: $font-size
  line-height: $line-height
  color: $text-color
  background-color: $bg-color
  smooth-font()
  &:before
    position:fixed
    visibility:hidden
    *display:none
.show-on-mobile
  display:none
a
  color: $link-color
  text-decoration: none
  &:hover
    color: $link-hover-color
    text-decoration: underline
h1
  font-size:34px
  line-height:51px
h2
  font-size:20px
  line-height:30px
h3
  font-size:16px
  line-height:24px
h4
  font-size:14px
  line-height:21px
h5
  font-size:12px
  line-height:18px
img
  max-width:100%
#wrapper
  position:relative
  .fullwidth
    height:100%
hr
  border:0
  border-bottom:1px solid $weak-color
.small
  small()
.large
  large()
.base-padding
  base-padding()
.strong-padding
  strong-padding()
.spacer
  height:40px
  &.half
    height:20px
  &.quarter
    height:10px

#wrapper
  .fullwidth
    height:100%
    padding-bottom:50px
header,
.top
  .fullwidth
    border-bottom:1px solid $weak-color
footer
.bot
  .fullwidth
    border-top:1px solid $weak-color

// Topbot specifics, remove everything below this line
img
  width:100%
a
  &.link
    color:$main-color
.top
  a
    &:hover
      text-decoration:none
code
  word-break:break-all;
  white-space:normal;
ul
  li
    word-break:break-word
  &.nav
    width:100%
    margin:0
    li
      padding:0;
      a,
      strong
        display:block
        padding:10px 20px
        &.active
          background:$weak-color
  &.file-list
    list-style:none
    padding-left:10px
    .directory
      font-weight:bold
      &:hover
        cursor:pointer
    ul
      display:none
      list-style:none
      padding-left:10px